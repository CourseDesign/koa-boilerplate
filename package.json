{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*",
    "commons/*",
    "domains/*",
    "applications/*"
  ],
  "scripts": {
    "build": "lerna run build --stream",
    "build:dev": "cross-env NODE_ENV=development lerna run build",
    "build:prd": "cross-env NODE_ENV=production lerna run build",
    "build:watch": "npm run build && lerna run build:watch --parallel",
    "clean": "lerna run clean --parallel",
    "postinstall": "husky install",
    "lint": "lerna run lint --parallel",
    "lint:fix": "lerna run lint:fix --parallel",
    "package:init": "./scripts/init-package.sh",
    "package:publish": "lerna publish",
    "package:sort": "sort-package-json \"**/package.json\"",
    "package:update": "lernaupdate",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "start": "lerna run start --scope=server",
    "test": "lerna run test --parallel"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "cross-env": "^7.0.3",
    "deepmerge": "^4.2.2",
    "eslint": "^8.3.0",
    "eslint-config-airbnb-typescript": "^14.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-monorepo": "^0.3.2",
    "eslint-plugin-prettier": "^4.0.0",
    "glob": "^7.2.0",
    "gulp": "^4.0.2",
    "gulp-changed": "^4.0.3",
    "gulp-if": "^3.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-typescript": "^5.0.1",
    "gulp-uglify": "^3.0.2",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "lerna": "^4.0.0",
    "lerna-update-wizard": "^1.1.0",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "sort-package-json": "^1.52.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">=14",
    "npm": ">=7"
  }
}
